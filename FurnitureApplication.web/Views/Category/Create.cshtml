@model FurnitureApplication.Entities.Category
@{
    ViewBag.Title = "Create";
    //var trueChecked = !Model.isFeatured ? "checked" : string.Empty;
    //var falseChecked = Model.isFeatured ? "checked" : string.Empty;
}

<div id="main">
    <div class="main-holder">
        <div class="container" style="margin-top: 130px; margin-bottom: 30px;">
            <div class="heading-area">
                <h2>Create Category</h2>
            </div>
            <hr />
            <div class="row">
                <div class="col-lg-6">
                    <form method="post">
                        <div class="form">
                            <div class="form-group">
                                <label>Name</label>
                                <input class="form-control" type="text" name="Name" placeholder="Name" />
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <input class="form-control" type="text" name="Description" placeholder="Description" />
                            </div>
                            <div class="form-group">
                                <label>Upload Image</label>
                                <input type="hidden" name="ImageUrl" value="" id="ImageUrl" />
                                <input id="imageUpload" type="file" name="Image" accept=".jpg, .png" />
                            </div>
                            <div class="form-group">
                                <label>Is Feature?</label>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" id="customRadioInline1" name="isFeatured" class="custom-control-input" value="true">
                                    <label class="custom-control-label" for="customRadioInline1">True</label>
                                </div>
                                <div class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" id="customRadioInline2" name="isFeatured" class="custom-control-input" value="false">
                                    <label class="custom-control-label" for="customRadioInline2">False</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" type="submit">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-6">
                    <img id="categoryImage" src="" />
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#imageUpload").change(function (e) {
        var element = this;

        var formData = new FormData();

        var totalFiles = element.files;

        for (var i = 0; i < totalFiles.length; i++) {
            var file = element.files[i];
            formData.append("File", file);
        }
        $.ajax({
            type: 'POST',
            url: '/shared/UploadImages',
            dataType: 'json',
            data: formData,
            contentType: false,
            processData: false
        })
        .done(function (response) {
            console.log(response);

            if (response.Success)
            {
                $("#categoryImage").attr("src", response.ImageUrl)
                $("#ImageUrl").val(response.ImageUrl)
            }
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail")
        });
    })
</script>
