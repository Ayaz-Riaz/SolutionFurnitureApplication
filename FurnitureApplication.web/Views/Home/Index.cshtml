    <section class="flat-row row-product-new">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="heading-area">
                        <h2>Discount On Products</h2>
                    </div>
                    <div class="product-content product-fourcolumn clearfix">
                        <ul class="product style2 clearfix">
                            @if (Model.HasDiscount != null & Model.HasDiscount.Count >= 4)
                            {
                                var firstproduct = Model.HasDiscount[0];
                                var secondproduct = Model.HasDiscount[1];
                                var thirdproduct = Model.HasDiscount[2];
                                var fourproduct = Model.HasDiscount[3];

                                <li class="product-item">
                                    <div class="product-thumb clearfix">
