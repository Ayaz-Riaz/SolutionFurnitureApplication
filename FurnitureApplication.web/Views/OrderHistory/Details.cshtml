@model OrderDetailsViewModel
@if (Model != null && Model.Order != null)
{
    <div id="main">
        <div class="main-holder">
            <div class="container" style="margin-top: 130px; margin-bottom: 30px;">
                <div class="heading-area">
                    <h2>Order Detail</h2>
                </div>
                <div class="row">
                    <div class="col-md-12 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Your products</span>
                            <span class="badge badge-secondary badge-pill">@Model.Order.OrderItems.Count</span>
                        </h4>
                        <ul class="list-group mb-3">
                            @foreach (var orderItem in Model.Order.OrderItems)
                            {
                                <li class="list-group-item">
                                    <div class="clearfix" style="overflow: hidden; margin-bottom: 10px;">
                                        <span class="quanitity"><b>Total Quantity:</b> @orderItem.Quantity</span>
                                    </div>
                                    <div>
                                        <span class="text-muted">$@orderItem.Product.Price</span>
                                    </div>
                                </li>
                            }

                            <li class="list-group-item d-flex justify-content-between">
                                <span>Total (USD)</span>
                                <strong>$ @Model.Order.TotalAmount</strong>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-7 order-md-1">
                        <h4 class="mb-3">Billing address</h4>
                        <form class="needs-validation" novalidate="">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="Name">Name: @Model.OrderBy.Name</label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="email">Email: @Model.OrderBy.Email </label>
                            </div>

                            <div class="mb-3">
                                <label for="address">Address: @Model.OrderBy.Address</label>
                            </div>
                            <div class="mb-3">
                                <label for="inputGroupSelect01" style="display: block;">Status: @Model.Order.status</label>
                            </div>

                            <hr class="mb-4">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div id="main">
        <div class="main-holder">
            <div class="container" style="margin-top: 130px; margin-bottom: 30px;">
                <div class="heading-area">
                    <h2>Checkout</h2>
                </div>
                <div class="text-center text-danger">
                    <p>Order Details Not available</p>
                </div>
            </div>
        </div>
    </div>
}
