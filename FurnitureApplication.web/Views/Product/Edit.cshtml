@model Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Product</h2>
<form id="editProduct">
    <div class="form">
        <div class="box">
            <input type="hidden" name="ID" value="@Model.ID"/>
            <label>Name</label>
            <input type="text" name="Name" placeholder="Name"  value="@Model.Name"/>
        </div>
        <div class="box">
            <label>Price</label>
            <input type="text" name="Price" placeholder="Price" value="@Model.Price" />
        </div>
        <div class="box">
            <label>Description</label>
            <input type="text" name="Description" placeholder="Description" value="@Model.Description"/>
        </div>
        <div class="box">
            <button id="updateBtn" type="submit">Update</button>
        </div>
    </div>
</form>
<script>
    $("#updateBtn").click(function () {
        $.ajax({
            type: 'POST',
            url: "/Product/Edit",
            data: $("#editProduct").serialize()
        })
        .done(function (response) {
            $("#tableContainer").html(response);
            $("#actionContainer").html("");
        })
        .fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail")
        });
    });
</script>

