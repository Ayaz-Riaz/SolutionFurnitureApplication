<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/all.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="logo">
                        <a class="navbar-brand" href="~/Views/Home/Index.cshtml"><img src="../images/rast-furniture-logo.png"></a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav">
                          
                            <li class="nav-item sign-up">
                                @Html.ActionLink("Register", "Register", "Home", new { @class = "nav-link" })
                            </li>
                            <li class="nav-item sign-in">
                                @Html.ActionLink("Login", "Login", "Home", new { @class = "nav-link" })
                            </li>
                        </ul>
                        @*<form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>*@
                    </div>
                </nav>
            </div>
        </div>
        @RenderBody()
    </div>
    <div id="footer">
        
        <div class="footer-bottom">
            <div class="container">
                <p>© Powered by Rast</p>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/popper.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
