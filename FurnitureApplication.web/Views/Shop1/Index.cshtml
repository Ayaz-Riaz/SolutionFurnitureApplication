@model ShopViewModel
@{
    ViewBag.Title = "Index";

    var DefaultimageUrl = "/images/empty-member.png";
}

<div id="main">
    <div class="main-holder">
        <div class="container" style="margin-top: 130px; margin-bottom: 30px;">
            <div class="heading-area">
                <h2>Stylist Office Chairs</h2>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="search-box float-left" style="width: 100%; margin-bottom: 30px;">
                        <div class="search-row form-control">
                            <input type="text" placeholder="Search" />
                            <span class="ico-search10"></span>
                        </div>
                    </div>
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="price" class="control-label">Price</label>
                            <div class="">
                                <select class="form-control" id="price">
                                    <option>1000 to 2000</option>
                                    <option>2000 to 3000</option>
                                    <option>3000 to 4000</option>
                                    <option>4000 to 5000</option>
                                    <option>5000 to 6000</option>
                                    <option>6000 to 7000</option>
                                    <option>7000 to 8000</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="brand" class="control-label">Brand</label>
                            <div class="">
                                <select class="form-control" id="brand">
                                    <option>Rast1</option>
                                    <option>Rast2</option>
                                    <option>Rast3</option>
                                    <option>Rast4</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="color" class="control-label">Color</label>
                            <div class="">
                                <select class="form-control" id="color">
                                    <option>Black</option>
                                    <option>Green</option>
                                    <option>Gray</option>
                                    <option>Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <h3>Feature Categories</h3>
                            <ul class="tag-list">
                                @if(Model.FeaturedCategories != null){
                                    foreach (var category in Model.FeaturedCategories)
                                    {
                                        <li><a class="btn btn-primary" href="@Url.Action("Index", "Shop", new { categoryID = category.ID})">
                                            @category.Name
                                            </a></li>

                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="room-ideas">
                        <div class="row">
                            @foreach (var product in Model.Products)
                            {
                                var imageUrl = string.IsNullOrEmpty(product.ImageUrl) ? DefaultimageUrl : product.ImageUrl;

                                <div class="col-lg-4">
                                    <div class="card">
                                        <div class="plan-ribbon-wrapper"><div class="plan-ribbon">Popular</div></div>
                                        <img class="card-img-top" src="@imageUrl" alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title">@product.Name</h5>
                                            <p class="card-text">@product.Description</p>
                                            <span class="price-holder">$ @product.Price</span>
                                            <ul class="card-action-icons">
                                                <li><a href="#" class="ico-cart3"></a></li>
                                                <li><a href="#" class="ico-heart11"></a></li>
                                                <li><a href="#" class="ico-eye9"></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        </div>
    </div>
    <div class="main-holder">
        <div class="container">
            <div class="heading-area">
                <h2>Top Trending Products</h2>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="">
                        <a href="#" class="image-holder">
                            <img src="../images/Chair-rast-18.png" alt="rast image">
                            <span class="subtext">price 60$/hr</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="">
                        <a href="#" class="image-holder">
                            <img src="../images/Chair-rast-17.png" alt="rast image">
                            <span class="subtext">price 60$/hr</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="">
                        <a href="#" class="image-holder">
                            <img src="../images/Chair-rast-14.png" alt="rast image">
                            <span class="subtext">price 60$/hr</span>
                        </a>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="">
                        <a href="#" class="image-holder">
                            <img src="../images/Chair-rast-13.png" alt="rast image">
                            <span class="subtext">price 60$/hr</span>
                        </a>
                    </div>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>

