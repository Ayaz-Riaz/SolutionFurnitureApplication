@model ProductsWidgetsViewModel

@{
    var DefaultimageUrl = "/images/empty-member.png";
}

@if (Model != null && Model.Products != null)
{
    if (!Model.IsLatestProducts)
    {

        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">All products</a>
            </li>
            @foreach (var category in Model.Products.Select(x => x.Category).ToList().Distinct())
            {
                <li class="nav-item">
                    <a class="nav-link active" id="pills-profile-tab" data-toggle="pill" href="#@category.ID" role="tab" aria-controls="@category.ID" aria-selected="true">@category.Name</a>
                </li>
            }
        </ul>

        <div class="tab-content" id="pills-tabContent1">
            @foreach (var category in Model.Products.Select(x => x.Category).ToList().Distinct())
            {
                <div class="tab-pane fade" id="@category.ID" role="tabpanel" aria-labelledby="@category.ID">
                    <div class="room-ideas">
                        <div class="row">
                            @foreach (var product in Model.Products)
                            {
                                var imageUrl = string.IsNullOrEmpty(product.ImageUrl) ? DefaultimageUrl : product.ImageUrl;

                                <div class="col-lg-3">
                                    <a href="@Url.Action("Details", "Detail", new { ID = product.ID })">
                                        <div class="card">
                                            @if (Model.IsLatestProducts)
                                            {
                                                <div class="plan-ribbon-wrapper">
                                                    <div class="plan-ribbon">New</div>
                                                </div>
                                            }
                                            <img class="card-img-top" src="@imageUrl" alt="Card image cap">
                                            <div class="card-body">
                                                <h5 class="card-title">@product.Name</h5>
                                                <p class="card-text">@product.Description</p>
                                                <p class="price">$ @product.Price</p>
                                                <a href="#" data-id="@product.ID" class="btn btn-primary productAddToCart">Add To Cart</a>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
