@model ProductsWidgetsViewModel

@{
    var DefaultimageUrl = "/images/empty-member.png";
}

@if (Model != null && Model.Products != null)
{
    if (!Model.IsLatestProducts)
    {

        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">All products</a>
            </li>
            @foreach (var category in Model.Products.Select(x => x.Category).ToList().Distinct())
            {
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#@category.Name" role="tab" aria-controls="pills-profile" aria-selected="false">@category.Name</a>
                </li>
            }
        </ul>

        <div class="tab-content" id="pills-tabContent">
            @foreach (var category in Model.Products.Select(x => x.Category).ToList().Distinct())
            {
                <div class="tab-pane fade show active" id="@category.Name" role="tabpanel" aria-labelledby="pills-home-tab">
                    <div class="room-ideas">
                        <div class="row">
                            @foreach (var product in Model.Products)
                        {
                            var imageUrl = string.IsNullOrEmpty(product.ImageUrl) ? DefaultimageUrl : product.ImageUrl;

                                <div class="col-lg-3">
                                    <div class="card">
                                        @if (Model.IsLatestProducts)
                                        {
                                            <div class="plan-ribbon-wrapper">
                                                <div class="plan-ribbon">New</div>
                                            </div>
                                        }
                                        <img class="card-img-top" src="@imageUrl" alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title">@product.Name</h5>
                                            <p class="card-text">@product.Description</p>
                                            <p class="price">$ @product.Price</p>
                                            <a href="#" class="btn btn-primary">Add To Cart</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="tab-content" id="pills-tabContent">
      
            <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="pills-home-tab">
                <div class="room-ideas">
                    <div class="row">
                        @foreach (var product in Model.Products)
                        {
                            var imageUrl = string.IsNullOrEmpty(product.ImageUrl) ? DefaultimageUrl : product.ImageUrl;

                            <div class="col-lg-3">
                                <div class="card">
                                    @if (Model.IsLatestProducts)
                                    {
                                        <div class="plan-ribbon-wrapper">
                                            <div class="plan-ribbon">New</div>
                                        </div>
                                    }
                                    <img class="card-img-top" src="@imageUrl" alt="Card image cap">
                                    <div class="card-body">
                                        <h5 class="card-title">@product.Name</h5>
                                        <p class="card-text">@product.Description</p>
                                        <p class="price">$ @product.Price</p>
                                        <a href="#" class="btn btn-primary">Add To Cart</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        
    </div>
}
<script>
    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        e.target // newly activated tab
        e.relatedTarget // previous active tab
    })
</script>
